#! /bin/bash

set -x
set -euo pipefail

env | sort

wd=$(dirname "$0")
bn=$(basename "$0")

majorVersion="0.1"
trunk=main

bundleVersion=$("$wd"/../GHAScripts/BundleVersionFromGit "$majorVersion" "$trunk")

tmpfile=$(mktemp /tmp/"$bn".XXXXXX)

cat >"$tmpfile" <<-EOF
//
// Generated by $0
// Do not edit this file directly
// Instead, edit the script that generates it
//

let bundleVersion = "$bundleVersion"
EOF

# shellcheck disable=SC2154
if ! diff "$__BUNDLE_VERSION_FILE" "$tmpfile"; then
    cp "$tmpfile" "$__BUNDLE_VERSION_FILE"
fi
